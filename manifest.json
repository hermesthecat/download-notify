{
  "manifest_version": 2,
  "name": "download-notify",
  "version": "1.2",

  "description": "Creates optimized notifications for download events with memory management and throttling",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "background": {
      "scripts": ["permission-manager.js", "download-notify.js"],
      "persistent": false
  },

  "permissions": [
      "downloads"
  ],

  "optional_permissions": [
      "notifications"
  ]
}
